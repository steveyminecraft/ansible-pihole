---
extends: default

rules:
  line-length:
    max: 120
    level: warning
  braces:  
    min-spaces-inside: 1
    max-spaces-inside: 1
  octal-values:
    forbid-implicit-octal: true
    forbid-explicit-octal: true
  truthy:
    allowed-values: ['true', 'false']

  comments:
    min-spaces-from-content: 1
